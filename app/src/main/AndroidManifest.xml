<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="softeng2.teamhortons.myxa" >

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/myxa_logo_bg"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/myxa_logo_bg"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name=".ui.rider.PermissionCheck" />
        <activity android:name=".ui.rider.RiderActivity" />
        <activity android:name=".ui.ViewRecipeActivity" />
        <activity android:name=".ui.menu.MenuActivity" />
        <activity android:name=".ui.signup.SelectSignupActivity" />
        <activity android:name=".ui.signup.customer.SignupActivity" />
        <activity android:name=".ui.customer_login.LoginActivity" />
        <activity android:name=".ui.signup.rider.RiderSignUpActivity" />
        <activity android:name=".ui.main.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_api_key" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />


    </application>

</manifest>